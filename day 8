
class Solution {
public:
    bool isPalindrome(string s) {
        int n=s.size();
        int start=0;
        int end=n-1;
        while(start<=end){
            if(!isalnum(s[start])){
                start++;
                continue;
            }
            else if(!isalnum(s[end])){
                end--
                ;
                continue;
            }
          
                if(tolower(s[start])!=tolower(s[end])){
                    return false;
                }
                start++;
                end--;
            }
            return true;
        
    }
        
    
};
